{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "jest.config.d.ts",
    "jest.config.js",
    "web/postcss.config.d.ts",
    "web/postcss.config.js",
    "web/src/aws-exports.d.ts",
    "web/src/aws-exports.js",
    "web/tailwind.config.d.ts",
    "web/tailwind.config.js",
    "web/dist"
  ]
}
